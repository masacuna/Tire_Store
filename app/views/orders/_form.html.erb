= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :pst_rate
    %br/
    = f.text_field :pst_rate
  .field
    = f.label :gst_rate
    %br/
    = f.text_field :gst_rate
  .field
    = f.label :hst_rate
    %br/
    = f.text_field :hst_rate
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .actions
    = f.submit