= form_for(@province) do |f|
  - if @province.errors.any?
    #error_explanation
      %h2
        = pluralize(@province.errors.count, "error")
        prohibited this province from being saved:
      %ul
        - @province.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :gst
    %br/
    = f.text_field :gst
  .field
    = f.label :hst
    %br/
    = f.text_field :hst
  .field
    = f.label :pst
    %br/
    = f.text_field :pst
  .actions
    = f.submit